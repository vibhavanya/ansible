node { 
  stage('Downloading artifact') {
    def server= Artifactory.server 'Artifactory'
        def downloadSpec = """{
            "files": [{
            "pattern": "vibha1/petclinic.war",
            "target": "/root/artifacts/" }]
        }"""
    server.download(downloadSpec)  
 }
 def ppath = "/root/artifacts/"
dir(ppath) {
 stage('check') {
 echo "Hello";
 sh 'ls -a'
 }

  stage('Geting Ready For Ansible') {
		sh label: 'Docker', script: 'cp -rf /root/artifacts/*.war /root/.jenkins/workspace/ansible/tomcat/templates/'
  //sh label: 'Jenkins', script: "echo '<h1> TASK BUILD ID: ${env.BUILD_DISPLAY_NAME}</h1>' > tomcat/templates/apps/index.html"
	}
	}
 
  def project_ansible="tomcat"
  dir(project_ansible) { 
  stage('Prod Deployment on AWS'){
  sh 'pwd';
  sh 'ls -a'
  sh 'cat /root/.jenkins/workspace/terraform/jenkins-ci.ini'
  sh label: 'terraform', script: 'ansible-playbook -i /root/.jenkins/workspace/terraform/jenkins-ci.ini -u ubuntu --key /root/.ssh/inkey.pem web-playbook.yaml'
     } 
   }

}
