node {
 stage('Git-Checkout for ansible') {
   git 'https://github.com/vibhavanya/ansible.git'
  }
  
  stage('Geting Ready For Ansible') {
    def server= Artifactory.server 'Artifactory'
        def downloadSpec = """{
            "files": [{
            "pattern": "petclinic/*.war",
            "target": "/root/artifacts/" }]
        }"""
    server.download(downloadSpec)  
  sh label: 'Jenkins', script: "echo '<h1> TASK BUILD ID: ${env.BUILD_DISPLAY_NAME}</h1>' > tomcat/templates/apps/index.html"
 }
 
  def project_ansible="ansible"
  dir(project_ansible) { 
  stage('Prod Deployment on AWS'){
  sh label: 'terraform', script: 'ansible-playbook -i /root/.jenkins/workspace/terrform/jenkins-ci.ini -u ubuntu --key /root/.ssh/inkey.pem web-playbook.yaml'
     } 
   }
}
